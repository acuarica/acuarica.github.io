{
  // https://docs.astro.build/en/guides/content-collections/#setting-up-typescript
  // `importsNotUsedAsValues` is included when extends `strictest`.
  // https://docs.astro.build/en/guides/typescript/#type-imports
  "extends": "astro/tsconfigs/strictest",
  // https://docs.astro.build/en/guides/aliases/
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  }
}