{
  // https://docs.astro.build/en/guides/content-collections/#setting-up-typescript
  "extends": "astro/tsconfigs/strictest",
  // https://docs.astro.build/en/guides/aliases/
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    }
  }
}