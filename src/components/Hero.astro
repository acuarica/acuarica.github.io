---
interface Props {
	intro: string;
	name: string;
	avatar: string;
	socials: {
		url: string;
		icon: string;
	}[];
}

const { intro, name, avatar, socials } = Astro.props;
---

<div class="hero min-h-screen bg-base-200">
	<div class="hero-content flex-col lg:flex-row-reverse">
		<div class="avatar">
			<div
				class="w-96 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
			>
				<img
					src={`${import.meta.env.BASE_URL}${avatar}`}
					alt="Profile picture"
				/>
			</div>
		</div>
		<div>
			<p class="text-2xl font-bold py-6">{intro}</p>
			<h1 class="text-5xl font-bold">{name}</h1>
			<p class="py-6">
				<article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
					<slot />
				</article>
			</p>
		</div>
	</div>
</div>

{
	socials.map((social) => (
		<a class="btn btn-circle btn-outline btn-info" href={social.url} target="_blank">
			<i class={social.icon} />
		</a>
	))
}
