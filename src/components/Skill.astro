---
interface Props {
    title: string;
    subtitle: string;
    icon: string;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="card bg-base-100 shadow-xl">
    <figure class="pt-8">
        <i class:list={[icon, "rounded-xl"]} style="font-size: 3rem;"></i>
    </figure>
    <div class="card-body items-center text-center">
        <h2 class="card-title">{title}</h2>
        <p>{subtitle}</p>
    </div>
</div>
