---
import { Icon } from "astro-icon";

interface Props {
    title: string;
    subtitle: string;
    icon: string;
}

const { title, subtitle, icon } = Astro.props;
---

<div class="card bg-base-200 shadow-xl">
    <figure class="pt-8">
        <Icon name={icon} style="font-size: 3rem;" />
    </figure>
    <div class="flex flex-auto flex-col p-8 gap-2 text-center">
        <h2 class="text-xl font-semibold">{title}</h2>
        <p>{subtitle}</p>
    </div>
</div>
