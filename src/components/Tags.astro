---
import { Icon } from "astro-icon";

interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<Icon name="fa-solid:tags" />
{
    tags.map(tag => (
        <div class="badge badge-primary">
            <a class="link" href={`${import.meta.env.BASE_URL}tags/${tag}`}>
                {tag}
            </a>
        </div>
    ))
}
