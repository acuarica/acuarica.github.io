---
import { CollectionEntry, getCollection } from "astro:content";
import Page from "@layouts/Page.astro";
import Tags from "@components/Tags.astro";
import Authors from "@components/Authors.astro";

interface Props {
    entry: CollectionEntry<"publications">;
}

export async function getStaticPaths() {
    const pubs = await getCollection("publications");
    return pubs.map(entry => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { title, subtitle, authors, tags, date, publication } = entry.data;
const { Content } = await entry.render();
---

<Page title={title}>
    <article class="prose prose-lg max-w-[1024px] prose-img:mx-auto">
        <h2>{title}. {subtitle}</h2>

        <h4><Authors authors={authors} /></h4>

        <Tags tags={tags} />

        <h4>{publication}</h4>

        {date.toDateString()}

        <h3>Abstract</h3>

        <Content />
    </article>
</Page>
